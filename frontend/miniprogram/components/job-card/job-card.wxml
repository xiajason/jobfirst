<!--components/job-card/job-card.wxml-->
<view class="job-card" bindtap="onCardTap">
  <view class="job-header">
    <view class="job-title">{{job.title}}</view>
    <view class="job-salary text-primary">{{job.salary}}</view>
  </view>
  
  <view class="job-company">{{job.company}}</view>
  
  <view class="job-tags" wx:if="{{job.tags && job.tags.length > 0}}">
    <text class="tag tag-primary" wx:for="{{job.tags}}" wx:key="*this" wx:for-item="tag">{{tag}}</text>
  </view>
  
  <view class="job-meta">
    <text class="job-location">📍 {{job.location}}</text>
    <text class="job-experience">💼 {{job.experience}}</text>
    <text class="job-education" wx:if="{{job.education}}">🎓 {{job.education}}</text>
  </view>
  
  <view class="job-footer">
    <view class="job-time">{{job.publishTime}}</view>
    <view class="job-actions">
      <button 
        class="btn btn-secondary btn-sm" 
        catchtap="onFavoriteTap"
      >
        {{job.isFavorite ? '❤️' : '🤍'}}
      </button>
      <button 
        class="btn btn-primary btn-sm" 
        catchtap="onApplyTap"
      >
        立即投递
      </button>
    </view>
  </view>
</view>
