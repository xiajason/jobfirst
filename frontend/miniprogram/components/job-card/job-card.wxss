/* components/job-card/job-card.wxss */
.job-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.job-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.job-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.job-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.job-salary {
  font-size: 30rpx;
  font-weight: 600;
  white-space: nowrap;
}

.job-company {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.job-tags {
  margin-bottom: 12rpx;
}

.job-meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.job-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.job-time {
  font-size: 24rpx;
  color: #999;
}

.job-actions {
  display: flex;
  gap: 12rpx;
}

.btn-sm {
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .job-card {
    padding: 20rpx;
    margin-bottom: 12rpx;
  }
  
  .job-title {
    font-size: 30rpx;
  }
  
  .job-salary {
    font-size: 28rpx;
  }
  
  .job-meta {
    gap: 16rpx;
  }
}

/* 动画效果 */
.job-card {
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
