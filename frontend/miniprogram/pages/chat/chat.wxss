/* chat.wxss */

/* 聊天列表 */
.chat-list {
  padding: 20rpx;
}

.chat-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.chat-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.chat-avatar {
  position: relative;
  margin-right: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.online-status {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 16rpx;
  height: 16rpx;
  background: #52c41a;
  border-radius: 50%;
  border: 2rpx solid #fff;
}

.chat-content {
  flex: 1;
}

.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.chat-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.chat-time {
  font-size: 24rpx;
  color: #999;
}

.chat-message {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.message-preview {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 12rpx;
}

.message-badge {
  flex-shrink: 0;
}

.chat-meta {
  display: flex;
  gap: 16rpx;
  font-size: 22rpx;
  color: #999;
}

.chat-company {
  color: #1890ff;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
  margin-bottom: 40rpx;
}

/* 快速操作 */
.quick-actions {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  z-index: 100;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  width: 80rpx;
  height: 80rpx;
  justify-content: center;
}

.action-item:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.action-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.action-text {
  font-size: 20rpx;
  color: #666;
}

/* 筛选弹窗 */
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.filter-content {
  background: #fff;
  border-radius: 16rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80%;
  overflow: hidden;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.filter-close {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.filter-options {
  padding: 30rpx;
}

.filter-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.filter-option:last-child {
  border-bottom: none;
}

.option-label {
  font-size: 28rpx;
  color: #333;
}

.picker-value {
  font-size: 28rpx;
  color: #1890ff;
  padding: 8rpx 16rpx;
  background: #f0f8ff;
  border-radius: 6rpx;
}

.filter-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.filter-actions .btn {
  flex: 1;
  padding: 20rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 徽章样式 */
.badge {
  display: inline-block;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 8rpx;
  border-radius: 16rpx;
  background: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .chat-list {
    padding: 16rpx;
  }
  
  .chat-item {
    padding: 20rpx;
    margin-bottom: 12rpx;
  }
  
  .avatar {
    width: 70rpx;
    height: 70rpx;
  }
  
  .chat-name {
    font-size: 28rpx;
  }
  
  .message-preview {
    font-size: 24rpx;
  }
  
  .quick-actions {
    bottom: 30rpx;
    right: 30rpx;
  }
  
  .action-item {
    width: 70rpx;
    height: 70rpx;
    padding: 12rpx;
  }
  
  .action-icon {
    font-size: 28rpx;
  }
  
  .action-text {
    font-size: 18rpx;
  }
}

/* 动画效果 */
.chat-item {
  animation: slideInRight 0.3s ease-out;
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.filter-modal {
  animation: fadeIn 0.3s ease-out;
}

.filter-content {
  animation: slideInUp 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 阴影效果 */
.chat-item {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.chat-item:active {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.action-item {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.action-item:active {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 在线状态动画 */
.online-status {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(82, 196, 26, 0.7);
  }
  70% {
    box-shadow: 0 0 0 10rpx rgba(82, 196, 26, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(82, 196, 26, 0);
  }
}
