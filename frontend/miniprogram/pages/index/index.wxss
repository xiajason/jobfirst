/* index.wxss */

/* 搜索区域 */
.search-section {
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
}

.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
}

/* 轮播图 */
.banner-section {
  margin: 20rpx;
}

.banner-swiper {
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 快捷功能 */
.quick-actions {
  margin: 20rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  background: #f5f5f5;
  transform: scale(0.95);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 内容区域 */
.section {
  margin: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #1890ff;
}

/* 职位列表 */
.job-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.job-item {
  transition: all 0.3s ease;
}

.job-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.job-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.job-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.job-salary {
  font-size: 30rpx;
  font-weight: 600;
  white-space: nowrap;
}

.job-company {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.job-tags {
  margin-bottom: 12rpx;
}

.job-meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 公司列表 */
.company-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.company-item {
  transition: all 0.3s ease;
}

.company-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.company-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.company-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
}

.company-details {
  flex: 1;
}

.company-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.company-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.company-meta {
  display: flex;
  gap: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.company-jobs {
  text-align: right;
}

.job-count {
  font-size: 26rpx;
  color: #1890ff;
}

/* 行业分类 */
.industry-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.industry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.industry-item:active {
  background: #f5f5f5;
  transform: scale(0.95);
}

.industry-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.industry-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
  text-align: center;
}

.industry-count {
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-left: 16rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .action-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 16rpx;
    padding: 24rpx 16rpx;
  }
  
  .industry-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 16rpx;
    padding: 24rpx 16rpx;
  }
  
  .action-icon,
  .industry-icon {
    font-size: 40rpx;
  }
  
  .action-text,
  .industry-name {
    font-size: 22rpx;
  }
}
