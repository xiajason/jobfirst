/* index.wxss */
.container {
  padding: 0;
}

/* 搜索栏 */
.search-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #fff;
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.search-input {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
  color: #999;
}

.search-icon {
  margin-right: 12rpx;
  font-size: 28rpx;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
}

/* 轮播图 */
.banner-section {
  margin: 20rpx;
}

.banner-swiper {
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 快捷功能 */
.quick-actions {
  margin: 20rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: background-color 0.3s ease;
}

.action-item:active {
  background-color: #f0f0f0;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 内容区块 */
.section {
  margin: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #3cc51f;
}

/* 职位列表 */
.job-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.job-item {
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.job-item:last-child {
  border-bottom: none;
}

.job-item:active {
  background-color: #f8f8f8;
}

.job-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.job-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.job-salary {
  font-size: 28rpx;
  color: #ff4757;
  font-weight: 500;
}

.job-company {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.job-tags {
  margin-bottom: 12rpx;
}

.job-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.job-location {
  font-size: 24rpx;
  color: #999;
}

.job-time {
  font-size: 24rpx;
  color: #999;
}

/* 数据分析 */
.analytics-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.analytics-item {
  text-align: center;
}

.analytics-number {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #3cc51f;
  margin-bottom: 8rpx;
}

.analytics-label {
  font-size: 24rpx;
  color: #666;
}

/* AI聊天卡片 */
.ai-chat-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  color: #fff;
}

.ai-chat-content {
  flex: 1;
}

.ai-chat-title {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.ai-chat-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.ai-chat-icon {
  font-size: 60rpx;
  margin-left: 20rpx;
}

/* 企业服务 */
.enterprise-services {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.service-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.service-item:last-child {
  border-bottom: none;
}

.service-item:active {
  background-color: #f8f8f8;
}

.service-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.service-content {
  flex: 1;
}

.service-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.service-desc {
  font-size: 24rpx;
  color: #666;
}

/* 行业网格 */
.industry-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.industry-item {
  text-align: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: background-color 0.3s ease;
}

.industry-item:active {
  background-color: #f0f0f0;
}

.industry-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.industry-name {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.industry-count {
  font-size: 22rpx;
  color: #999;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #999;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.tip-upgrade {
  font-size: 26rpx;
  color: #3cc51f;
  text-decoration: underline;
}

/* 响应式 */
@media (max-width: 750rpx) {
  .action-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .analytics-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .industry-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}
