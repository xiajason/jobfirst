/* jobs.wxss */

/* 筛选器区域 */
.filter-section {
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-tabs {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.filter-tab.active {
  color: #1890ff;
  font-weight: 500;
}

.filter-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

.filter-options {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}

.filter-option {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-option:active {
  background: #e0e0e0;
}

.filter-label {
  margin-right: 8rpx;
}

/* 搜索区域 */
.search-section {
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
}

.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
}

/* 职位列表 */
.job-list {
  padding: 20rpx;
}

.job-item {
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.job-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.job-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.job-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.job-salary {
  font-size: 30rpx;
  font-weight: 600;
  white-space: nowrap;
}

.job-company {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.job-tags {
  margin-bottom: 12rpx;
}

.job-meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.job-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.job-time {
  font-size: 24rpx;
  color: #999;
}

.job-actions {
  display: flex;
  gap: 12rpx;
}

.btn-sm {
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 20rpx;
}

/* 选择器占位符 */
.picker-placeholder {
  display: none;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .filter-options {
    padding: 16rpx;
    gap: 16rpx;
  }
  
  .filter-option {
    padding: 10rpx 16rpx;
    font-size: 24rpx;
  }
  
  .job-list {
    padding: 16rpx;
  }
  
  .job-title {
    font-size: 30rpx;
  }
  
  .job-salary {
    font-size: 28rpx;
  }
  
  .job-meta {
    flex-wrap: wrap;
    gap: 16rpx;
  }
}

/* 动画效果 */
.job-item {
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 筛选器动画 */
.filter-tab {
  transition: all 0.3s ease;
}

.filter-tab:active {
  transform: scale(0.95);
}

/* 按钮动画 */
.btn {
  transition: all 0.3s ease;
}

.btn:active {
  transform: scale(0.95);
}

/* 搜索框动画 */
.search-input-wrapper {
  transition: all 0.3s ease;
}

.search-input-wrapper:focus-within {
  background: #e6f7ff;
  box-shadow: 0 0 0 2rpx rgba(24, 144, 255, 0.2);
}
