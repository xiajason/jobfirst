/* pages/register/register.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 60rpx;
  box-sizing: border-box;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 80rpx;
  padding-top: 60rpx;
}

.logo {
  margin-bottom: 30rpx;
}

.logo image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 表单样式 */
.form {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #667eea;
  background: #fff;
}

/* 验证码组 */
.code-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.code-input {
  flex: 1;
}

.code-btn {
  width: 200rpx;
  height: 88rpx;
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.code-btn.disabled {
  background: #ccc;
  color: #999;
}

/* 用户类型选择 */
.user-type {
  display: flex;
  gap: 20rpx;
}

.type-item {
  flex: 1;
  height: 120rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  transition: all 0.3s ease;
}

.type-item.active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
}

.type-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.type-item text {
  font-size: 24rpx;
  color: #666;
}

.type-item.active text {
  color: #667eea;
  font-weight: 500;
}

/* 协议勾选 */
.agreement {
  margin-top: 20rpx;
}

.checkbox-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  flex: 1;
}

.link {
  color: #667eea;
  text-decoration: underline;
}

/* 注册按钮 */
.register-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin: 40rpx 0 30rpx;
  transition: all 0.3s ease;
}

.register-btn.disabled {
  background: #ccc;
  color: #999;
}

/* 登录链接 */
.login-link {
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

/* 其他注册方式 */
.other-login {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.divider {
  position: relative;
  text-align: center;
  margin-bottom: 40rpx;
}

.divider::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background: #e5e5e5;
}

.divider-text {
  background: #fff;
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #999;
  position: relative;
  z-index: 1;
}

.login-methods {
  display: flex;
  justify-content: center;
  gap: 80rpx;
}

.method-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.method-item image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.method-item text {
  font-size: 24rpx;
  color: #666;
}

/* 底部链接 */
.footer {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.separator {
  margin: 0 20rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .container {
    padding: 30rpx 40rpx;
  }
  
  .form {
    padding: 40rpx 30rpx;
  }
  
  .login-methods {
    gap: 60rpx;
  }
}
